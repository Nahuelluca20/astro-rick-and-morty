---
interface Props {
	imageCharacter: string
	id: string | number;
	name: string;
	status: string;
	href: string;
	species: string;
}

const { href, name, status, imageCharacter, species, id} = Astro.props;
import {ViewTransitions} from 'astro:transitions';
import { Image } from "astro:assets"
---

<li class="link-card max-w-[350px] m-auto">
	<a href={`/character/${id}`}>
		<Image height={300} width={300} src={imageCharacter} alt={`Pictor of the ${name}`} />
		<ViewTransitions/>
		<h2>
			{name}
			<span>&rarr;</span>
		</h2>
		<p>
			Status: {status !== "unknown" ? (status === "Alive" ? "Alive ðŸŸ¢" : "Dead ðŸ”´") : "Unkown ðŸŸ¡"}		
		</p>
		<p>
			Species: {species}
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
